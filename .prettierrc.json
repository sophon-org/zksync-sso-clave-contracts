{
  "plugins": ["prettier-plugin-solidity"],
  "bracketSameLine": false,
  "printWidth": 120,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "all",
  "singleQuote": false,
  "bracketSpacing": true,
  "proseWrap": "always",
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "**/*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always",
        "tabWidth": 2
      }
    },
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse"
      }
    }
  ]
}
